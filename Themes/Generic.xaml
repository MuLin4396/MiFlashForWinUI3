<ResourceDictionary
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:local="using:MiFlashForWinUI3">
	<Style TargetType="local:SettingsCard">
		<Setter Property="Template">
			<Setter.Value>
				<ControlTemplate TargetType="local:SettingsCard">
					<Border Background="{ThemeResource ControlFillColorDefaultBrush}" CornerRadius="{ThemeResource ControlCornerRadius}">
						<Grid Padding="8,8" ColumnSpacing="16">
							<Grid.ColumnDefinitions>
								<ColumnDefinition Width="Auto" />
								<ColumnDefinition Width="*" />
								<ColumnDefinition Width="Auto" />
							</Grid.ColumnDefinitions>
							<FontIcon Grid.Column="0" VerticalAlignment="Center" Glyph="{TemplateBinding IconGlyph}" FontSize="16" />
							<Grid Grid.Column="1">
								<Grid.RowDefinitions>
									<RowDefinition Height="*" />
									<RowDefinition Height="*" />
								</Grid.RowDefinitions>
								<TextBlock Grid.Row="0" HorizontalAlignment="Left" VerticalAlignment="Bottom" Foreground="{ThemeResource TextFillColorPrimaryBrush}" Style="{StaticResource BodyTextBlockStyle}" Text="{TemplateBinding Header}" />
								<TextBlock Grid.Row="1" HorizontalAlignment="Left" VerticalAlignment="Top" Foreground="{ThemeResource TextFillColorSecondaryBrush}" Style="{StaticResource CaptionTextBlockStyle}" Text="{TemplateBinding Description}" />
							</Grid>
							<ContentPresenter Grid.Column="2" VerticalContentAlignment="Center" Content="{TemplateBinding RightContent}" />
						</Grid>
					</Border>
				</ControlTemplate>
			</Setter.Value>
		</Setter>
	</Style>
	<Style TargetType="local:BarTitle">
		<Setter Property="Template">
			<Setter.Value>
				<ControlTemplate TargetType="local:BarTitle">
					<Border Margin="8" Background="{ThemeResource AccentAcrylicBackgroundFillColorBaseBrush}" CornerRadius="{ThemeResource ControlCornerRadius}">
						<Grid Padding="8,8" ColumnSpacing="16">
							<Grid.ColumnDefinitions>
								<ColumnDefinition Width="Auto" />
								<ColumnDefinition Width="*" />
								<ColumnDefinition Width="Auto" />
							</Grid.ColumnDefinitions>
							<FontIcon Grid.Column="0" VerticalAlignment="Center" Glyph="{TemplateBinding IconGlyph}" FontSize="16" />
							<TextBlock Grid.Column="1" HorizontalAlignment="Left" VerticalAlignment="Center" Foreground="{ThemeResource TextFillColorPrimaryBrush}" Style="{StaticResource BodyStrongTextBlockStyle}" Text="{TemplateBinding Header}" />
							<ContentPresenter Grid.Column="2" VerticalContentAlignment="Center" Content="{TemplateBinding RightContent}" />
						</Grid>
					</Border>
				</ControlTemplate>
			</Setter.Value>
		</Setter>
	</Style>
</ResourceDictionary>